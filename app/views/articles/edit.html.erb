<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', value: @article.title %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control', value: @article.content %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

